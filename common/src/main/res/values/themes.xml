<resources>
    <!-- Base application theme. -->
    <style name="Theme.Meetty" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/button_tint_primary</item>
        <item name="colorPrimaryVariant">@color/background_secondary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:autofilledHighlight">@android:color/transparent</item>
        <item name="android:colorControlActivated">@color/stroke_color_primary</item>
    </style>

    <style name="Theme.Matisse" parent="Matisse.Zhihu">
        <item name="colorPrimary">@color/background_primary_dark</item>
        <item name="colorPrimaryDark">@color/background_primary_dark</item>
        <item name="bottomToolbar.preview.textColor">@color/background_primary_dark</item>
        <item name="bottomToolbar.apply.textColor">@color/background_primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

</resources>