<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Button.Enter.Filled" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">@dimen/sp_20</item>
        <item name="android:fontFamily">@font/gilroy_semibold</item>
        <item name="android:backgroundTint">@color/button_tint_primary</item>
        <item name="android:textColor">@color/text_color_secondary</item>
        <item name="cornerRadius">@dimen/dp_10</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:paddingTop">@dimen/dp_12</item>
        <item name="android:paddingBottom">@dimen/dp_12</item>
        <item name="boxBackgroundMode">none</item>
        <item name="textAllCaps">false</item>
    </style>


    <style name="Button.Enter.Outlined" parent="Button.Enter.Filled">
        <item name="android:backgroundTint">@color/button_tint_secondary</item>
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="strokeColor">@color/stroke_color_primary</item>
        <item name="strokeWidth">@dimen/dp_2</item>
    </style>

    <style name="ImageButton.Filled.Centered" parent="Widget.MaterialComponents.Button">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="iconPadding">0dp</item>
        <item name="paddingStart">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:padding">@dimen/dp_2</item>
        <item name="cornerRadius">@dimen/dp_10</item>
    </style>

    <style name="Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textSize">@dimen/sp_20</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/text_color_secondary_dark</item>
        <item name="android:insetTop">10dp</item>
        <item name="android:insetBottom">10dp</item>
        <item name="android:letterSpacing">0</item>
        <item name="rippleColor">@color/text_color_secondary_dark</item>
    </style>

    <style name="MaterialButton.Default" parent="Widget.MaterialComponents.Button">
        <item name="android:insetLeft">@dimen/dp_0</item>
        <item name="android:insetTop">@dimen/dp_0</item>
        <item name="android:insetRight">@dimen/dp_0</item>
        <item name="android:insetBottom">@dimen/dp_0</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="elevation">@dimen/dp_0</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:backgroundTint">@color/button_background_color</item>
        <item name="android:textAppearance">?android:attr/textAppearanceButton</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Button.Save" parent="MaterialButton.Default">
        <item name="android:textColor">@color/text_color_secondary</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="cornerRadius">@dimen/dp_10</item>
    </style>

    <style name="MaterialCardView.Circle" parent="Widget.MaterialComponents.CardView">
        <item name="cornerSize">50%</item>
    </style>

    <style name="ImageButtonSelectable" parent="SelectableItemTheme">
        <item name="android:theme">@style/SelectableItemTheme</item>
        <item name="android:background">?selectableItemBackgroundBorderless</item>
    </style>

    <style name="SelectableItemTheme">
        <item name="colorControlHighlight">@color/highlight_color_primary</item>
    </style>

    <style name="TextViewDescription">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:shadowColor">@android:color/darker_gray</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">60</item>
    </style>

    <style name="TextView.Title" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">@dimen/sp_20</item>
    </style>

    <style name="TextView.Caption" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/text_color_primary_dark</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="TextView.PLainText" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/text_color_primary_dark</item>
        <item name="fontFamily">@font/work_sans_regular</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="TextView.Default" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">@dimen/sp_14</item>
    </style>

    <style name="TextView.SubTitle" parent="TextView.Default">
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="fontFamily">@font/gilroy_semibold</item>
    </style>

    <style name="TextView.Text" parent="TextView.Default">
        <item name="android:textSize">@dimen/sp_16</item>
    </style>

    <style name="TextView.Small" parent="TextView.Default">
        <item name="android:textSize">@dimen/sp_12</item>
    </style>

    <style name="BottomSheet.Style" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/background_rounded_top</item>
    </style>

    <style name="BottomSheetDialog.Theme" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheet.Style</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/shadow_color_primary</item>
    </style>

    <style name="BottomSheetDialog_Black" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheet.Style</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@color/background_shadow</item>
        <item name="android:statusBarColor">@color/background_shadow</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="RoundedTopCorners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">@dimen/dp_32</item>
        <item name="cornerSizeTopLeft">@dimen/dp_32</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="spinnerBackground" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="colorSurface">@color/white</item>
    </style>

    <style name="chipStyle.Choice" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_toggle_tint</item>
        <item name="android:textColor">@color/chip_toggle_text_color</item>
    </style>
</resources>