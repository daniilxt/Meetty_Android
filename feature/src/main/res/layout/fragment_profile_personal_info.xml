<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:mask="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_third"
    android:fillViewport="true"
    tools:context=".profile_personal_info.presentation.ProfilePersonalInfoFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".login.presentation.LoginFragment">

        <ImageView
            android:id="@+id/iv_user_avatar"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_100"
            android:layout_marginTop="@dimen/dp_50"
            android:src="@drawable/ic_profile_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <include
            android:id="@+id/et_first_name"
            layout="@layout/input_field"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_24"
            app:layout_constraintBottom_toTopOf="@+id/et_last_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_user_avatar"
            app:layout_constraintVertical_chainStyle="packed" />

        <include
            android:id="@+id/et_last_name"
            layout="@layout/input_field"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_20"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_first_name" />

        <include
            android:id="@+id/et_birth_day"
            layout="@layout/input_field"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_20"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_last_name" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/et_phone_number_wrapper"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_20"
            android:hint="@string/phone_number"
            android:textColorHint="@color/text_color_hint_primary"
            app:boxStrokeColor="@color/button_tint_primary"
            app:hintTextColor="@color/text_color_hint_primary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et_birth_day">

            <ru.daniilxt.common.widgets.masked_edit_text.MaskedEditText
                android:id="@+id/et_phone_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/sim_hint"
                android:imeOptions="actionDone"
                android:inputType="phone"
                android:paddingHorizontal="@dimen/dp_20"
                android:paddingVertical="@dimen/dp_18"
                android:textColor="@color/black"
                android:textColorHint="@color/text_color_secondary_dark"
                android:textSize="@dimen/sp_14"
                app:keep_hint="true"
                mask:allowed_chars="1234567890"
                mask:mask="@string/sim_mask" />
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_24"
            android:layout_marginTop="@dimen/dp_24"
            android:background="@drawable/background_rounded"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/dp_10"
            app:layout_constraintTop_toBottomOf="@+id/et_phone_number_wrapper">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/mb_man"
                style="@style/Button.Enter.Filled"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:backgroundTint="@color/button_toggle_tint"
                android:checkable="true"
                android:fontFamily="@font/gilroy_semibold"
                android:stateListAnimator="@null"
                android:text="@string/man"
                android:textColor="@color/button_text_toggle_tint"
                android:textSize="@dimen/sp_18"
                app:rippleColor="@android:color/transparent" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/mb_woman"
                style="@style/Button.Enter.Filled"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:backgroundTint="@color/button_toggle_tint"
                android:checkable="true"
                android:fontFamily="@font/gilroy_semibold"
                android:stateListAnimator="@null"
                android:text="@string/woman"
                android:textColor="@color/button_text_toggle_tint"
                android:textSize="@dimen/sp_18"
                app:rippleColor="@android:color/transparent" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>