<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_third"
    android:fillViewport="true"
    tools:context=".profile_user_achievements.presentation.ProfileUserAchievementsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/include_rv"
            layout="@layout/include_achievements"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_50"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_add_achieve"
            style="@style/ImageButtonSelectable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/dp_20"
            android:background="?selectableItemBackground"
            android:clickable="true"
            android:drawablePadding="@dimen/dp_16"
            android:focusable="true"
            android:fontFamily="@font/gilroy_medium"
            android:text="@string/add_achievement"
            android:textColor="@color/text_color_primary_dark"
            android:textSize="@dimen/sp_16"
            app:drawableStartCompat="@drawable/ic_plus_circle_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/include_rv" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
