<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="wrap_content"
    android:background="@drawable/background_calendar">

    <TextView
        android:id="@+id/frg_date_picker__tv_month_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginBottom="@dimen/dp_10"
        android:fontFamily="@font/work_sans_regular"
        android:textColor="@color/text_color_primary_dark"
        android:textSize="@dimen/sp_16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Июнь 2021" />

    <ImageView
        android:id="@+id/frg_date_picker__iv_month_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_14"
        android:padding="@dimen/dp_8"
        android:src="@drawable/ic_month_arrow_12"
        app:layout_constraintStart_toEndOf="@id/frg_date_picker__tv_month_year"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/frg_date_picker__ib_prev_month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_toStartOf="@id/frg_date_picker__ib_next_month"
        android:background="@color/background_primary"
        android:rotation="180"
        android:src="@drawable/ic_calendar_arrow_24"
        app:layout_constraintEnd_toStartOf="@id/frg_date_picker__ib_next_month"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/calendar_arrows_tint" />

    <ImageButton
        android:id="@+id/frg_date_picker__ib_next_month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="@color/background_primary"
        android:src="@drawable/ic_calendar_arrow_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/calendar_arrows_tint" />


    <LinearLayout
        android:id="@+id/frg_date_picker__textview_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_8"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/frg_date_picker__tv_month_year">

        <TextView
            android:id="@+id/frg_date_picker__tv_monday"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/monday_short"
            android:textAlignment="center"
            android:textColor="@color/calendar_days_header_tint" />

        <TextView
            android:id="@+id/frg_date_picker__tv_tuesday"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/tuesday_short"
            android:textAlignment="center"
            android:textColor="@color/calendar_days_header_tint" />

        <TextView
            android:id="@+id/frg_date_picker__tv_wednesday"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/wednesday_short"
            android:textAlignment="center"
            android:textColor="@color/calendar_days_header_tint" />

        <TextView
            android:id="@+id/frg_date_picker__tv_thursday"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/thursday_short"
            android:textAlignment="center"
            android:textColor="@color/calendar_days_header_tint" />

        <TextView
            android:id="@+id/frg_date_picker__tv_friday"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/friday_short"
            android:textAlignment="center"
            android:textColor="@color/calendar_days_header_tint" />

        <TextView
            android:id="@+id/frg_date_picker__tv_saturday"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/saturday_short"
            android:textAlignment="center"
            android:textColor="@color/calendar_days_header_tint" />

        <TextView
            android:id="@+id/frg_date_picker__tv_sunday"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/sunday_short"
            android:textAlignment="center"
            android:textColor="@color/calendar_days_header_tint" />
    </LinearLayout>

    <com.kizitonwose.calendarview.CalendarView
        android:id="@+id/frg_date_picker__calendar_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_8"
        android:layout_marginVertical="@dimen/dp_14"
        android:background="@color/background_primary"
        app:cv_dayViewResource="@layout/include_date_picker_day_layout"
        app:cv_orientation="horizontal"
        app:cv_outDateStyle="none"
        app:cv_scrollMode="paged"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/frg_date_picker__textview_layout" />


    <View
        android:id="@+id/frg_date_picker__snap_view"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/background_calendar_spinner"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/frg_date_picker__rv_month" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/frg_date_picker__rv_month"
        android:layout_width="0dp"
        android:layout_height="154dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="48dp"
        android:layout_marginBottom="72dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/frg_date_picker__rv_year"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/frg_date_picker__tv_month_year" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/frg_date_picker__rv_year"
        android:layout_width="0dp"
        android:layout_height="154dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="72dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/frg_date_picker__rv_month"
        app:layout_constraintTop_toBottomOf="@id/frg_date_picker__tv_month_year" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/mb_ok"
        style="@style/Widget.Material3.Button.OutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        android:insetLeft="@dimen/dp_10"
        android:insetTop="@dimen/dp_10"
        android:insetRight="@dimen/dp_10"
        android:insetBottom="@dimen/dp_10"
        android:text="@string/ok"
        android:textColor="@color/text_color_primary"
        android:textSize="@dimen/sp_14"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/frg_date_picker__rv_year"
        app:layout_goneMarginBottom="@dimen/dp_16"
        app:rippleColor="@color/text_color_primary"
        tools:layout_editor_absoluteX="16dp" />
</androidx.constraintlayout.widget.ConstraintLayout>